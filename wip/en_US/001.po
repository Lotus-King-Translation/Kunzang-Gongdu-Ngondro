msgctxt "b6822c2218524c49a40b97039f6d393f"
msgid "འབྲས་བུ་ གཞི་ ལ་ རྫོགས་ གྱུར་ཅིག་␣༔"
msgstr "The result will be complete in the ground."

msgctxt "b0871a394752474292de35cd4f98ded0"
msgid "ཅེས་ དགེ་བ་ བསྔོས་ ཏེ་ སྨོན་ལམ་ གྱིས་ རྒྱས་ བཏབ་ ཅིང་ །"
msgstr "So dedicating the virtue, seal it with apsiration. "

msgctxt "77d6ef9213af4b2f9412e2e3c9d52661"
msgid ""
"སྤྱོད་ལམ་ ཀུན་ ཏུ་ ཚོགས་ གཉིས་ ཟུང་འཇུག་ གི་ རྣལ་འབྱོར་ ལས་མི་ འདའ་བ་␣ས་ "
"གཏན་ གྱི་ འདུན་མ་ བཟང་པོ་ ཉམས་ འོག་ ཏུ་ ཚུད་པ་␣ར་ བྱ་␣འོ །།"
