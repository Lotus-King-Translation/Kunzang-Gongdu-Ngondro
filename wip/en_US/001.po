msgctxt "2f2797aec50d4b5eb9dc9977febde350"
msgid ""
"༄༅།  ཀུན་བཟང་ དགོངས་པ་ ཀུན་ འདུས་ ཀྱི་ སྔོན་འགྲོ་␣འི་ ངག་འདོན་ བྱང་ཆུབ་ "
"ལམ་བཟང་ ཞེས་ བྱ་བ་ བཞུགས་ སོ ། །"
msgstr ""
"The Manual for the Foundational Practice of The Union of Samantabhadra's "
"Enlightened Intent: The Profound Path of Enlightenment "

msgctxt "33a9d8a91fde4931bb0b39e8ef6e8b82"
msgid "ཨོཾ་ སྭ་ སྟི །"
msgstr "OM SVASTI"

msgctxt "f18b58cfa5214dfeab7eb0c856d8ab95"
msgid "། རབ་འབྱམས་ སྐྱབས་ ཀུན་ འདུས་པ་␣འི་ བདག"
msgstr "Master who embodies the profuse refuges,"

msgctxt "d01ecdd51ed447dda551b18ebd393843"
msgid "། དྲིན་ཅན་ བླ་མ་␣ར་ གུས་ བཏུད་ ནས །"
msgstr "Kind root lama, bowing to you with devotion,"

msgctxt "b6830dc4c8dc41e3ad779b56bba84770"
msgid "། ཀུན་བཟང་ དགོངས་པ་ ཀུན་ འདུས་ ཀྱི །"
msgstr "For the Union of Samantabhadra's Enlightened Intent,"

msgctxt "554dc93ec8da4ef3b7a6fc08d10da639"
msgid "། སྔོན་འགྲོ་␣འི་ ངག་འདོན་ འཇུག་ བདེ་␣ར་ སྤྲོ །།"
msgstr "[I] expound this agreeable liturgy of the foundational practice."

msgctxt "9b508b8e67b14a37a1cb197a0b67ec38"
msgid "འདི་ ལ་ གཉིས །"
msgstr "In this [first section] there are two parts: "

msgctxt "6f23a76f94bc43a094a3ddcc0caa54e4"
msgid "ཐུན་ སྤྱི་␣འི་ སྔོན་འགྲོ་ དང༌ །"
msgstr "The common foundational practice [1.1], and "

msgctxt "3b126e92cbdb4e47abc78b5197553afe"
msgid "སྐཔས་ དོན་ སྒོས་ ཀྱི་ སྔོན་འགྲོ་␣འོ །"
msgstr "The specific foundational practice [1.2]."

msgctxt "db0d15d3ee4147458d9c93d798f634e2"
msgid "དང་པོ་ ནི །"
msgstr "1.1. [The common foundational practice]"

msgctxt "530255c201e2404f969577f0f167cad5"
msgid "སྤྱི་བོ་␣ར་ རྩ་བ་␣འི་ བླ་མ་ དགྱེས་ བཞིན་ དུ་ བཞུགས་པ་␣ར་ བསྒོམ་ ལ །"
msgstr ""
"Sit upright on a comfortable seat, and after settling the mind naturally, "
"clear out the stale breath three times. Then, meditate that your root lama "
"sits cheerfully on the crown of your head."

msgctxt "7ad6bff0b4d8486b8192de14bf150cae"
msgid "མོས་གུས་ གདུང་ཤུགས་ དྲག་པོ་␣ས །"
msgstr "Through intense, heartfelt devotion, [supplicate as follows]: "

msgctxt "05e9a64cb38d49fca93475510ae76bb4"
msgid "དཔལ་ལྡན་ རྩ་བ་␣འི་ བླ་མ་ རིན་པོ་ཆེ །།"
msgstr "Glorious, precious root lama, "

msgctxt "dfb992627ea543a1aa933de9ac2a5de0"
msgid "བདག་ གི་ སྤྱི་བོ་␣ར་ པད་ ཟླ་␣འི་ གདན་ བཞུགས་ ལ །།"
msgstr "Seated above my head on a moon on lotus seat, "

msgctxt "d8452b1ec72a43ec8c5aabf247f314d4"
msgid "བཀའ་དྲིན་ ཆེན་པོ་␣འི་ སྒོ་ ནས་ རྗེས་བཟུང་ སྟེ །།"
msgstr "Through accepting with great kindness, "

msgctxt "2e5b5c92d4134a70b826ba975bfc9228"
msgid "སྐུ་གསུང་ཐུགས་ ཀྱི་ དངོས་གྲུབ་ སྩལ་ དུ་ གསོལ །།"
msgstr "Please bestow the accomplishments of body, speech and mind. "

msgctxt "e80298590ddb454dbab7e7d7fabe33f7"
msgid "ཞེས་ དང །"
msgstr "Having said that, [continue by reciting]:"

msgctxt "22583812a8bd4440ad4aee0f24c22858"
msgid "དུས་གསུམ་ སངས་རྒྱས་ ཐམས་ཅད་ ཀྱི་ ངོ་བོ་ བླ་མ་ རིན་པོ་ཆེ་ མཁྱེན །།"
msgstr ""
"Precious lama, essence of all buddhas of the three times, think [of me]!"

msgctxt "1f807f9cbe64448c95668c21bc1703bb"
msgid "བདག་ གི་ རྒྱུད་ སྨིན་ ཅིང་ གྲོལ་བ་␣ར་ བྱིན་ གྱིས་ བརླབ་ དུ་ གསོལ །།"
msgstr "Grant the blessing [of] liberation by ripening my continuum. "

msgctxt "4a4f9e147c9845a69378308bdcac6fe7"
msgid ""
"ཟབ་ ལམ་ གྱི་ རྟོགས་པ་ ཁྱད་པར་ཅན་ རྒྱུད་ ལ་ སྐྱེ་བ་␣ར་ བྱིན་ གྱིས་ བརླབ་ ཏུ་ "
"གསོལ །།"
msgstr ""
"Grant the blessing so that exceptional realization of the profound path will"
" born in [the mental] continuum."

msgctxt "e1d0326474a440f19bd57e69badcfcb2"
msgid ""
"ཚེ་ འདི་ཉིད་ ལ་ འོད་གསལ་ རྫོགས་པ་ ཆེན་པོ་␣འི་ ལམ་མཆོག་ མཐ་␣ར་ ཕྱིན་པ་␣ར་ "
"བྱིན་ གྱིས་ བརླབ་ ཏུ་ གསོལ །།"
msgstr ""
"Grant the blessing to conlude the sumpreme path of Clear Light Great "
"Complete in this very life."

msgctxt "de211e72c024465cb112c3746fcd9ef0"
msgid "ཞེས་ གསོལ་བ་ བཏབ་ མཐ་␣ར །"
msgstr "After so supplicating, "

msgctxt "c726714052c94ccda80ef067068ff254"
msgid ""
"བླ་མ་ འོད་ དུ་ ཞུ་ ནས་ རང་ ལ་ ཐིམ་པ་␣ར་ བསམ་ ཞིང་ རང་བབས་ སུ་ ཀློད་ དེ་ "
"འཇོག་ གོ"
msgstr ""
"The lama dissolves into light and absorbs into you. Rest at ease in self-[arising natural] state.\n"
"\n"
" "

msgctxt "69d28230f8a54a77a2d49a29e7ee7296"
msgid "། གཉིས་པ་ སྐབས་དོན་ སྔོན་འགྲོ་ དངོས་ ལ །"
msgstr "1.2. The [two parts] of the actual foundational practice"

msgctxt "7fe40ae736594d7696e6c2ad54528e4e"
msgid "ཐུན་མོང་ དང །  ཁྱད་པར་ གཉིས་ ཀྱི །"
msgstr "The ordinary [1.2.1 and 1.2.2] and the special [2.1 through 2.5]."

msgctxt "096690c1151f47788decc2f7be032285"
msgid "དང་པོ་ ཐུན་མོང་ བློ་ ལྡོག་ རྣམ་པ་ བཞི་␣ས་ རྒྱུད་ སྦྱོང་བ་ ནི །"
msgstr ""
"The ordinary is the cultivation of one's being through The Four Thoughts that Turn the Mind [followed by the Four Immeasurables].\n"
"1.2.1. The Four Thoughts that Turn the Mind"

msgctxt "b51fecb8b8eb4688b5b3b7a0f2c3aa0c"
msgid "དལ་འབྱོར་ འདི་ ནི་ ཤིན་ཏུ་ རྙེད་པ་␣ར་ དཀའ །།"
msgstr "These freedoms and advantages are most difficult to find."

msgctxt "95b27505a18b411eb5efa5bfcfd20e88"
msgid "སྐྱེས་བུ་␣ས་ དོན་ སྒྲུབ་ ཐོབ་པ་␣ར་ གྱུར་པ་ ལ །།"
msgstr "Once a person has obtained a meaningful life, "

msgctxt "0ba2fd47d4164cd79f2e8ddbc3482093"
msgid "གལ་ཏེ་ འདི་ ལ་ ཕན་པ་ མ་ བསྒྲུབ་ ན །།"
msgstr "If this benefit is not accomplished now, "

msgctxt "3b612b7ca5ed45379d6ce4875b23a0a0"
msgid "ཕྱིས་ འདི་ ཡང་དག་ འབྱོར་པ་␣ར་ ག་ལ་ འགྱུར །།"
msgstr "How then could this genuine connection occur [again]?"

msgctxt "ea42bcb20c194a11a1d2422b274faa35"
msgid "སྲིད་ གསུམ་ མི་རྟག་ སྟོན་ཀ་␣འི་ སྤྲིན་ དང་ འདྲ །།"
msgstr "The three existences are impermanent, like autumn clouds. "

msgctxt "e6796dd414d14ac8b523be181fb5debd"
msgid "འགྲོ་བ་␣འི་ སྐྱེ་འཆི་ གར་ ལ་ བལྟ་ དང་ མཚུངས །།"
msgstr "The births and deaths of beings are like watching theatre. "

msgctxt "26ebf4bb6a5747ce940424c5072f9f4c"
msgid "སྐྱེས་བུ་␣འི་ ཚེ་འགྲོ་ ནམ་མཁ་␣འི་ གློག་ འདྲ་ སྟེ །།"
msgstr "A person's life span is like lightning in the sky, "

msgctxt "d3e537c976ce47d6ae1e66b7e8d15caf"
msgid "རི་གཟར་ འབབ་ཆུ་ བཞིན་ དུ་ མྱུར་ མགྱོགས་ འགྲོ །།"
msgstr "Passing as quickly as a steep mountain waterfall. "

msgctxt "8eec9798f88d4783add7ee8320131904"
msgid "དུས་ ཀྱིས་ བསྙེན་ ནས་ རྒྱལ་པོ་ འགྲོ་ གྱུར་ ན །།"
msgstr "When the time has come, even for a king, "

msgctxt "4830d4cf584f412c897d707731c385a7"
msgid "ལོངས་སྤྱོད་ མཛའ་ དང་ གཉེན་བཤེས་ རྗེས་ མི་ འབྲང་ །།"
msgstr "Resources, relatives and friends cannot follow. "

msgctxt "c9745b24c2e84d7886fb1eee8b66496f"
msgid "སྐྱེས་བུ་ དག་ ནི་ གར་ གནས་ གར་ འགྲོ་ ཡང༌ །།"
msgstr "But for all people, wherever they are and wherever they go, "

msgctxt "a7e8e4d338a7425fba6dc85ee746159e"
msgid "ལ་␣ས་ ནི་ གྲིབ་མ་ བཞིན་ དུ་ རྗེས་སུ་ འབྲང་ །།"
msgstr "Karma follows behind like a shadow. "

msgctxt "034eaa6cfc9f4e0eb68097b4f76585c4"
msgid "སྲེད་ སྲིད་ མ་རིག་ དབང་ གིས་ སྐྱེ་བོ་ རྣམས །།"
msgstr "All births trough the power of ignorant craving existence, "

msgctxt "d0d614b32f094a74a7a1c7e3cc88d42f"
msgid "མི་ དང་ ལྷ་ དང་ ངན་སོང་ རྣམ་ གསུམ་པོ །།"
msgstr "Humans, gods and the three lower states, "

msgctxt "bd7cbcea346b43a0b14213c8ad522513"
msgid "འགྲོ་བ་ ལྔ་པོ་ དག་ ཏུ་ མི་ མཁས་ འཁོར །།"
msgstr "Cycle unwittingly through these five states of being,"

msgctxt "5a233a079ccb476098ed23a11bc3e215"
msgid "དཔེར་ན་ རྫ་མཁན་ འཁོར་ལོ་ འཁོར་བ་ བཞིན །།"
msgstr "Like the spinning of a potter's wheel. "

msgctxt "529c3935aa824b26b9c99d6af2c66454"
msgid "སྲིད་ གསུམ་ རྒ་ དང་ ནད་ ཀྱི་ སྡུག་བསྔལ་ འབར །།"
msgstr ""
"The three existences blaze with the dissatisfaction of old age and sickness."
" "

msgctxt "dc5c56e9067e4fccbaa8bc215fcab1f6"
msgid "འདི་ ན་ འཆི་མེད་ རབ་ འབར་ མགོན་མེད་ དེ །།"
msgstr "Here, in this blazing endless protectorless state, "

msgctxt "6ec366dfb23f422cbd9c1b1acaccfbd2"
msgid "སྲིད་ ལ་␣ས་ བྱུང་ ལ་ འགྲོ་བ་ རྟག་ ཏུ་ རྨོངས །།"
msgstr "They remain ignorant of the way out of existence, "

msgctxt "2da9aa46b8034e6a9fcaa5eaeef59a75"
msgid "བུམ་པ་␣ར་ ཆུད་པ་␣འི་ བུང་བ་ འཁོར་བ་ བཞིན །།"
msgstr "Like trapped bees circling around inside a bottle. "

msgctxt "364671a14f554695bd3e9b551dabe564"
msgid ""
"ཞེས་པ་ རྣམས་ ངག་ དུ་ བརྗོད་པ་␣འམ་ མ་ བརྗོད་ ཀྱང་ རུང་ སྟེ་ དོན་ ཡིད་ ལ་ "
"བསམ་པ་␣ས་ སྣ་ དྲངས་ ནས །"
msgstr ""
"Whether these are said out loud or not, direct the thought to contemplating [their] meaning.\n"
"[Next, The Four Immeasurable]."

msgctxt "f8583c5d5f0949fa85ed6b4cc2320831"
msgid "མཁའ་ཁྱབ་ འགྲོ་ ཀུན་བདག་ གི་ ཕ་མ་ སྟེ །།"
msgstr ""
"[1.2.1 The Four Immeasurable]\n"
"\n"
"My fathers and mothers, all beings pervading space, "

msgctxt "588ae0283bfb4eb293eecb904a59d5fa"
msgid "བདེ་བ་ འདོད་ ཀྱང་ སྡུག་བསྔལ་ འབའ་ཞིག་ སྒྲུབ །།"
msgstr "Desire ease but achieve only dissatisfaction. "

msgctxt "e2598abd50b044cda0b81be2bfab052e"
msgid "ཐར་ མེད་ འཁོར་བ་␣ར་ འཁྱམས་པ་ སྙིང་ རེ་ རྗེ །།"
msgstr "How pitiful, wandering without escape in cyclic existence. "

msgctxt "e140a457723042b39f4d51141ad84462"
msgid "འདི་ རྣམས་ བདེ་ལྡན་ སྡུག་བསྔལ་ བྲལ་བ་ དང །།"
msgstr "All this [become] ease, free from dissatisfaction,"

msgctxt "0c6a0cebc0e84b158a4bf5597698ccc2"
